@using AdminFrontend.ViewModels
@helper Table(TableViewModel model)
{
    <style>
        .rcp-table {
            border: 1px solid #000000;
            width: 100%;
        }
        .rcp-table-head {
            border-bottom: 2px double #000000;
            background: #c8c8c8;
        }
        .rcp-table-btn-column {
            max-width: 10px;
            text-align: left;
        }
        tr .rcp-table-btn-column:first-of-type {
            max-width: 20px;
            text-align: center;
        }
        .rcp-table-delete-btn {
            color: red;
        }
        .rcp-table-edit-btn {
            color: green;
        }
    </style>

    <table class="rcp-table">
        <thead class="rcp-table-head">
            <tr>
                <td></td>
                <td></td>
                @foreach (var colName in model.ColumnsNames)
                {
                    <td>@colName</td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in model.Rows)
            {
                <tr>
                    <!--Редактирование-->
                    <td class="rcp-table-btn-column">
                        <a class="fa fa-pencil-square-o rcp-table-icon rcp-table-edit-btn" title="Редактировать" href="@(model.EditAction + row.Id)"></a>
                    </td>
                    <!--Удаление-->
                    <td class="rcp-table-btn-column">
                        <a class="fa fa-times rcp-table-icon rcp-table-delete-btn" title="Удалить" href="@(model.DeleteAction + row.Id)"></a>
                    </td>
                    @foreach (var col in row.Columns)
                    {
                        <td>@col</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}